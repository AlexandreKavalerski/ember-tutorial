<div class='rentals'>
  <label>
    <span>Where would you like to stay?</span>
    <Input @value={{this.query}} class='light' />
  </label>

  <ul class='results'>
    <AkRentals::Filter @rentals={{@rentals}} @query={{this.query}} as |results|>
      {{#each results as |rental|}}
        <li><AkRental @rental={{rental}} /></li>
      {{/each}}
    </AkRentals::Filter>
  </ul>
</div>